<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My Project</title>
    <link rel="stylesheet" href="assets/css/navbar.css">
    <link rel="stylesheet" href="assets/css/my-project.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/feather-icons"></script>
  </head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <img src="assets/img/dumbways.png" alt="">
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav">
          <li><a class="nav-link" href="/">Home</a></li>
          <li><a class="nav-link active" href="/blog">Add Project</a></li>
          <li><a class="nav-link" href="/testimonial">Testimonial</a></li>
      </ul>
    </div>
    <div>
      <button type="button" class="btn-contact">
        <a href="/contact" style="text-decoration: none; color: white;">Contact Me</a>
      </button>
    </div>
  </div>
</nav>
   
<!-- Form -->

<div style="text-align: center; margin-top: 30px;">
  <h1>ADD MY PROJECT</h1>
</div>
  <div style="display: flex; justify-content: center; margin-top: 30px;">
    <form onsubmit="addBlog(event)">
        <div class="mb-3">
          <label for="exampleInputEmail1" style="font-weight: bold;" class="form-label">Name</label>
          <input type="name" class="form-control" id="Name" aria-describedby="emailHelp">
        </div>
        <div style="display: flex; width: 310px; gap: 10px;">
          <div class="col-md-6">
              <label for="inputEmail4" style="font-weight: bold;" class="form-label">Start Date</label>
              <input type="date" class="form-control" id="startDate">
          </div>
          <div class="col-md-6">
            <label for="inputPassword4" style="font-weight: bold;" class="form-label">End Date</label>
            <input type="date" class="form-control" id="endDate">
          </div>
        </div>
        <div class="mb-3" style="margin-top: 10px;">
            <label for="exampleFormControlTextarea1" style="font-weight: bold;" class="form-label">Description</label>
            <textarea class="form-control" id="message" rows="3"></textarea>
        </div>
        <div class="Technologies-box" style="margin-top: 10px;">
          <label for="exampleInputEmail1" style="font-weight: bold;" class="form-label">Technologies</label>
            <div class="check-box">
              <div class="box1">
                  <input type="checkbox" id="nodejs" value="nodejs"/> Node Js
              <div class="box2">
                  <input type="checkbox" id="php" value="php"/> php
              </div>
              </div>
              <div class="box3">
                  <input type="checkbox" id="apple" value="apple"/> Apple
              <div class="box4">
                  <input type="checkbox" id="android" value="android"/> Android 
              </div>
              </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="formFile" style="font-weight: bold;" class="form-label">Upload</label>
            <input class="form-control" type="file" id="image">
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" style="background-color: green;" class="btn btn-primary">Submit</button>
        </div>
    </form>
  </div>

    <div id="contents" class="card-list">
      <!--dynamic content would be here -->
      <div class="myproject">
          <h1>MY PROJECT</h1>
      </div>
      {{#each data}}
        <div id="contents-isi" class="card-container">
          <div class="card">
              <img src="assets/img/syntax.jpg" alt="" />
              <h2>
                  <a href="/detail-blog/{{this.id}}" target="_blank">{{this.name}}</a>
              </h2>
              <div class="duration">
                  <p>{{this.startDate}}</p>
              </div>
              <p>
               {{this.description}}
              </p>
              <div class="btn-card">
                  <button class="btn-edit">Edit</button>
                  <button class="btn-delete">Delete</button>
              </div>
          </div>
          </div>   
          {{/each}}
      </div> 
      </dynamic>
  </div>
  <script src="assets/js/navbar.js"></script>
  <script>
      feather.replace();
  </script>
  <script src="assets/js/blog."></script>

  </body>
</html>
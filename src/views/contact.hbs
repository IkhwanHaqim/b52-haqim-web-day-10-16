                  <option value="1">Backend Developer</option>
                  <option value="2">Fullstack Developer</option>
                  </select>
                <div class="mb-3" style="margin-top: 10px;">
                  <label for="exampleFormControlTextarea1" style="font-weight: bold;" class="form-label">Your Message</label>
                  <textarea class="form-control" id="message" rows="3"></textarea>
                </div>
                <div class="d-flex justify-content-end">
                  <button class="btn-submit" onclick="submitData()">Submit</button>
                </div>
            </form>

    <!-- Form -->
      <div class="container">
        <div class="text">
            <h1>GET IN TOUCH</h1>
            <form style="width: 310px;">
                <div class="mb-3">
                  <label for="exampleInputEmail1" style="font-weight: bold;" class="form-label">Name</label>
                  <input type="name" class="form-control" id="name" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail1" style="font-weight: bold;" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail1" style="font-weight: bold;" class="form-label">Phone Number</label>
                  <input type="phone number" class="form-control" id="phonenumber" aria-describedby="emailHelp">
                </div>
                  <label for="exampleInputEmail1" style="font-weight: bold;" class="form-label" id="subject">Subject</label>
                  <select class="form-select" aria-label="Default select example">
